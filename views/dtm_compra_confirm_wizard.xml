<odoo>
    <record id="view_compras_confirm_wizard" model="ir.ui.view">
        <field name="name">dtm.compras.confirm.wizard.form</field>
        <field name="model">dtm.compras.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Compra">
                <div class="row">
                    <h2 class="">
                        <field name="material" readonly="1"/>
                    </h2>
                    <h5 class="d-flex">
                        <p>Proveedor: </p>
                        <field name="proveedor" readonly="1"/>
                    </h5>
                </div>
                <div class="row d-flex justify-content-between">
                    <div class="col-9">

                        <field name="ordenes" readonly="1"/>
                    </div>
                    <div class="col-3 ">
                        <h1>
                            <p>Total: </p>
                            <field name="costo" readonly="1"/>
                        </h1>
                        <div class="col-3">
                            <p class="h3">Precio/unidad</p>
                            <div class="d-flex h4">
                                <field name="total" readonly="1"/>
                                <p> x </p>
                                <field name="cantidad" readonly="1"/>
                            </div>
                        </div>
                    </div>
                </div>

                <footer>
                    <button string="Confirmar" type="object" name="action_confirmar_compra" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
